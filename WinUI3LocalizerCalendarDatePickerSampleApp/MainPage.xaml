<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WinUI3LocalizerCalendarDatePickerSampleApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinUI3LocalizerCalendarDatePickerSampleApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid RowDefinitions="Auto,*">
        <RadioButtons
            Grid.Row="0"
            Header="Languages"
            MaxColumns="2"
            SelectedIndex="0"
            SelectionChanged="LanguageRadioButtons_SelectionChanged">
            <RadioButton
                Content="English"
                Tag="en-US" />
            <RadioButton
                Content="French"
                Tag="fr-FR" />
        </RadioButtons>
        <CalendarDatePicker
            Grid.Row="1"
            VerticalAlignment="Top"
            Opened="CalendarDatePicker_Opened" />
    </Grid>

</Page>
